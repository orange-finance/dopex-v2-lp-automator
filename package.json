{
  "name": "dopex-v2-lp-automator",
  "description": "The contract to automate Dopex V2 position management. Deposited funds are automatically allocated to the best performing ticks.",
  "scripts": {
    "compile": "forge build",
    "test": "npm run test:foundry && npm run test:hardhat",
    "test:foundry": "forge test --no-match-test \"Skip\"",
    "test:hardhat": "npx hardhat test",
    "coverage": "./coverage.sh",
    "fmt": "prettier --write 'contracts/**/*.sol'",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{sol,js,ts,json,yml,yaml,md}": "prettier --write",
    "*.sol": "solhint"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.4",
    "axios": "^1.6.7",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "hardhat": "~2.20.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solhint-plugin-prettier": "^0.1.0",
    "viem": "^2.7.22"
  },
  "license": "GPL-3.0-only"
}
